!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:content => "telephone=no", :name => "format-detection"}
    %meta{:content => "user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi", :name => "viewport"}
    %link{:href => "css/compiled/login.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "css/compiled/dashboard.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "css/compiled/entries.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "css/compiled/retina.css", :rel => "stylesheet", :type => "text/css", :media=> "only screen and (-webkit-min-device-pixel-ratio: 2)"}

    %title PhoneGap Scaffold
  %body
    #login
      %form.login
        .error
        %input.field.deletable{:type => 'email', :id => 'auth_key', :name => 'auth_key', :placeholder => 'Email'}
        %input.field.deletable{:type => 'password', :id => 'password', :name=> 'password', :placeholder => 'Password'}
        %input.submit.clear-fix{:type => 'submit', :value => 'Login'}

    %script{:src => "cordova-2.5.0.js", :type => "text/javascript"}
    %script{:src => "js/vendor/zepto.js", :type => "text/javascript"}
    %script{:src => "js/vendor/underscore-min.js", :type => "text/javascript"}
    %script{:src => "js/vendor/backbone.js", :type => "text/javascript"}
    %script{:src => "js/vendor/modernizr-touch.js", :type => "text/javascript"}
    %script{:src => "js/vendor/pointer.js", :type => "text/javascript"}
    %script{:src => "js/compiled/app.js", :type => "text/javascript"}
    %script{:src => "js/compiled/index.js", :type => "text/javascript"}
    :javascript
      app.initialize();